<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../includes/head', {title: "Signup", content: "Login to SDI and become a member"}) %>
  <link rel="stylesheet" href="styles/base.css" />
  <link rel="stylesheet" href="styles/head.css">
  <link rel="stylesheet" href="styles/form.css" />
</head>
<body class="body-part">
  <header>
    <%- include('../includes/header') %>
  </header>
  <main class="main-part">
    <div class="form-container" id="formContainer">
      <form action="/signup" method="post" id="signupForm">
        <% if (inputData.hasError !== false) { %>
         
          <p id="hasError"><%= inputData.errMessage %></p>
        <% } %>
        <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
        <h1 class="headText">Signup</h1>
        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" value="<%= inputData.password %>" required>
        </div>
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
        </div>
        <div class="form-group">
          <label for="number">Phone number:</label>
          <input type="tel" id="number" name="number" value="<%= inputData.number %>" required>
        </div>
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" value="<%= inputData.name %>" required>
        </div>
        <div class="form-group"> 
          <button type="submit" id="submitButton">Submit</button>
        </div>
        <div class="fallback">
          <p>
            Already have an account? <a href="/login">Login</a> to proceed.
          </p>
        </div>
      </form>
    </div>
  </main>
  <script src="scripts/animations.js"></script>
</body>
</html>
